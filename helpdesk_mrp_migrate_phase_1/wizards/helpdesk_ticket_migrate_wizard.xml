<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="helpdesk_ticket_migrate_view_form" model="ir.ui.view">
        <field name="name">helpdesk.ticket.migrate.view.form</field>
        <field name="model">helpdesk.ticket.migrate.wizard</field>
        <field name="arch" type="xml">
            <form string="">
                <p>Run automated migration</p>
                <group>
                    <group>
                        <field name="select_all_tickets"/>
                    </group>
                </group>
                <footer>
                    <button string="Apply" name="migrate_helpdesk_ticket_mrp_phase_1" type="object" class="btn-primary"/>
                    <button string="Cancel " class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- wizard action on res.partner -->
    <act_window id="helpdesk_ticket_migration_wizard_action"
                name="Migrate helpdesk ticket"
                src_model="helpdesk.ticket"
                res_model="helpdesk.ticket.migrate.wizard"
                view_type="form" view_mode="form"
                key2="client_action_multi" target="new"
                groups="helpdesk_mgmt.group_helpdesk_manager"/>

</odoo>
